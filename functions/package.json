{
  "name": "legal-ai-functions",
  "version": "1.0.0",
  "description": "Cloud Functions for Legal AI App",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "serve": "npm run build && firebase emulators:start --only functions",
