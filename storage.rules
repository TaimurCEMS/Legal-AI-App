rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Organization-scoped documents
    match /organizations/{orgId}/documents/{documentId}/{fileName} {
      // Allow read if user is authenticated
      // Note: Org membership is enforced by Cloud Functions when generating signed URLs
      allow read: if request.auth != null;
      
      // Allow write if user is authenticated
      // Note: Org membership and permissions are verified by Cloud Functions in document.create
      // This allows direct client uploads for MVP, with backend validation
      allow write: if request.auth != null;
    }

    // Invoice exports stored under a dedicated invoices/ subfolder (grouped by case)
    match /organizations/{orgId}/documents/invoices/{caseFolder}/{documentId}/{fileName} {
      // Same MVP posture as documents:
      // - Signed URLs enforce membership/case access in Cloud Functions
      // - Direct reads/writes require auth (client-side convenience)
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
